[
  {
    "id": "VIIRS",
    "abstract": true,
    "providerId": "MODAPS",
    "meta": { "parent": "VIIRS" },
    "trigger": { "type": "timer", "period_s": 600 },
    "ingest": {
      "source": "http-tiles",
      "config": {
        "type": "apache-index",
        "root": "https://lance3.modaps.eosdis.nasa.gov/imagery/elements/{meta.parent}/{meta.collection}/",
        "match": "https://lance3.modaps.eosdis.nasa.gov/imagery/elements/{meta.parent}/{meta.collection}/{_}/{jday}/{file}.{ext}",
        "required": [ { "group": "file", "prop": "ext", "values": [ "jgw", "jpg", "txt" ] }  ],
        "groupBy": "{meta.parent}/{meta.collection}/{match.jday}",
        "addMeta": {
          "key": "{meta.parent}/{meta.collection}/{match.jday}",
          "date": { "type": "date", "value": "{match.jday}" }
        }
      }
    },
    "process": {
      "mrfgen": {
        "mrf_compression_type": "JPEG",
        "source_epsg": "{meta.epsg}",
        "mrf_merge": false,
        "mrf_nocopy": true,
        "overview_resampling": "average",
        "resize_resampling": "average",
        "parameter_name": "{meta.parameterName}"
      },
      "output": {
        "Bucket": "{resources.buckets.public}",
        "Key": "EPSG{meta.epsg}/{meta.collection}/{meta.date.year}"
      }
    }
  },
  {
    "id": "VNGCR_LQD_C1",
    "parent": "VIIRS",
    "meta": {
      "collection": "VNGCR_LQD_C1",
      "parameterName": "VNGCR_LQD_I1-M4-M3_NRT",
      "epsg": 4326,
      "zoom": 9
    }
  },
  {
    "id": "VNGCR_SQD_C1",
    "parent": "VIIRS",
    "meta": {
      "collection": "VNGCR_SQD_C1",
      "parameterName": "VNGCR_SQD_I1-M4-M3_NRT",
      "epsg": 3031,
      "zoom": 6
    }
  },
  {
    "id": "VNGCR_NQD_C1",
    "parent": "VIIRS",
    "meta": {
      "collection": "VNGCR_NQD_C1",
      "parameterName": "VNGCR_NQD_I1-M4-M3_NRT",
      "epsg": 3031,
      "zoom": 6
    }
  },
  {
    "id": "MOPITT",
    "abstract": true,
    "providerId": "LARC",
    "meta": { "parent": "MOPITT" },
    "trigger": { "type": "timer", "period_s": 600 },
    "ingest": {
      "source": "cmr-granules",
      "config": {
        "root": "https://cmr.earthdata.nasa.gov",
        "since": "5d",
        "event": "wms-map-found",
        "addMeta": {
          "key": "{meta.collection}/{granule.id}",
          "granuleId": "{granule.id}",
          "version": "{granule.updated}",
          "date": {
            "type": "date",
            "value": "{granule.time_start}"
          }
        },
        "filename": "{meta.key}.png",
        "getmap": "https://opendap.larc.nasa.gov/ncWMS-2.0/wms?REQUEST=GetMap&VERSION=1.3.0&STYLES={meta.wms.style}&CRS=CRS:84&WIDTH=640&HEIGHT=320&FORMAT=image/png&TRANSPARENT=true&LAYERS={meta.wms.layer}&BBOX=-180,-90,180,90&&time={meta.date.isoDateTime}",
        "ignoredErrorStatuses": "500"
      }
    },
    "process": {
      "files": [
        { "Bucket": "{resources.buckets.config}", "Key": "ingest/colormaps/{meta.colormap}" },
        { "Bucket": "{resources.buckets.config}", "Key": "ingest/empty_tiles/{meta.collection}.png" },
        { "filename": "{meta.granuleId}.pgw", "contents": "0.5625\n0\n0\n-0.5625\n-179.4375\n89.4375" }
      ],
      "mrfgen": {
        "mrf_compression_type": "PPNG",
        "source_epsg": "{meta.epsg}",
        "mrf_merge": false,
        "mrf_nocopy": false,
        "overview_resampling": "nearest",
        "resize_resampling": "near",
        "parameter_name": "{meta.collection}",
        "colormap": "{{{paths.input}}}/{meta.colormap}",
        "mrf_empty_tile_filename": "{{{paths.input}}}/{meta.collection}.png"
      },
      "output": {
        "Bucket": "{resources.buckets.public}",
        "Key": "EPSG{meta.epsg}/{meta.collection}/{meta.date.year}"
      }
    }
  },
  {
    "id": "MOPITT_DCOSMR_LL_D_STD",
    "parent": "MOPITT",
    "meta": {
      "concept_id": "C190698050-LARC",
      "collection": "MOPITT_DCOSMR_LL_D_STD",
      "colormap": "MOPITT_CO_Daily_Surface_Mixing_Ratio_Day.xml",
      "epsg": 4326,
      "zoom": 6,
      "wms": {
        "layer": "MOP03J.006/RetrievedCOSurfaceMixingRatioDay",
        "style": "se_mopitt_threshold_retrievedcosurfacemixingratioday_mop03j"
      }
    }
  }
]
