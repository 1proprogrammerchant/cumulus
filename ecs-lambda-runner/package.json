{
  "name": "gitc-ecs-lambda-runner",
  "version": "0.0.0",
  "description": "Runs lambda functions within ECS",
  "main": "index.js",
  "keywords": [
    "GIBS"
  ],
  "repository": {
    "type" : "git",
    "url" : "ssh://git@git.earthdata.nasa.gov:7999/gitc/gibs-prototype.git"
  },
  "author": "Patrick Quinn",
  "license": "Apache-2.0",
  "dependencies": {
    "aws-sdk": "^2.4.9",
    "lodash": "^4.13.1"
  },
  "config" : { "namespace" : "gitcdev" },
  "scripts": {
    "docker:build": "docker build -t gitc/ecs-lambda-runner .",
    "docker:tag": "docker tag gitc/ecs-lambda-runner:latest $AWS_ACCOUNT_ID.dkr.ecr.us-west-2.amazonaws.com/$npm_package_config_namespace/ecs-lambda-runner:latest",
    "docker:login": "$(aws ecr get-login --region us-west-2)",
    "docker:push": "docker push $AWS_ACCOUNT_ID.dkr.ecr.us-west-2.amazonaws.com/$npm_package_config_namespace/ecs-lambda-runner:latest",
    "docker:deploy": "npm run docker:build && npm run docker:tag && npm run docker:login && npm run docker:push",
    "docker:clean": "docker rm -v $(docker ps -a -q -f status=exited); docker rmi $(docker images -f \"dangling=true\" -q); true"
  }
}
